<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiAppMinhasCompras"
             x:Class="MauiAppMinhasCompras.App">
    <Application.Resources>
       
        <Style TargetType="ContentPage">
            <Setter Property="BackgroundColor" Value="black"/>
            <Setter Property="Padding" Value="20"/>
        </Style>

       
        <Style TargetType="Label">
            <Setter Property="TextColor" Value="#333333"/>
            <Setter Property="FontFamily" Value="Open Sans"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0, 10, 0, 5"/>
        </Style>

      
        <Style TargetType="Entry">
            <Setter Property="TextColor" Value="#333333"/>
            <Setter Property="BackgroundColor" Value="#FFFFFF"/>
            <Setter Property="FontFamily" Value="Open Sans"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="PlaceholderColor" Value="#999999"/>
            <Setter Property="Margin" Value="0, 5, 0, 10"/>
           
            <Setter Property="HeightRequest" Value="40"/>
        </Style>

        
        <Style TargetType="SearchBar">
            <Setter Property="TextColor" Value="#333333"/>
            <Setter Property="PlaceholderColor" Value="#999999"/>
            <Setter Property="BackgroundColor" Value="#FFFFFF"/>
            <Setter Property="FontFamily" Value="Open Sans"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0, 10, 0, 10"/>
        </Style>

       
        <Style TargetType="ListView">
            <Setter Property="BackgroundColor" Value="#FFFFFF"/>
            <Setter Property="SeparatorColor" Value="#E0E0E0"/>
            <Setter Property="Margin" Value="0, 10, 0, 0"/>
        </Style>
 
        <Style TargetType="Button">
            <Setter Property="TextColor" Value="#FFFFFF"/>
            <Setter Property="BackgroundColor" Value="#6200EE"/>
            <Setter Property="FontFamily" Value="Open Sans"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="20, 10"/>
            <Setter Property="Margin" Value="0, 20, 0, 0"/>
        </Style>
    </Application.Resources>
</Application>
